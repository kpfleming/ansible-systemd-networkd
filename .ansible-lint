%YAML 1.2
---
exclude_paths:
  - .cache
  - .github
  - "**/vars/main.yml"
  - "workflow-support/lint_paths.yml"
  - "workflow-support/ci_paths.yml"

skip_list:
  - experimental
  - name[casing]
  - name[play]
  - no-changed-when
  - template-instead-of-copy
  - unnamed-task
  - var-spacing
  - yaml[line-length]

kinds:
  - playbook: "**/workflow-support/*.yml"
